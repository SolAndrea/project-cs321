#:import utils kivy.utils

ScreenManagement:
    MainScreen:
        id: "main"
    Guide:
        id: "guide"
	BananasCla:
        id: 'bananas'
	TomatoesCla:
        id: 'tomatoes'
	AvocadosCla:
    	id: 'avocados'
	Classifier:
        id: "classifier"

<MainScreen>:
    name: 'main'
	GridLayout:
        cols:1
        size: root.width, root.height

        #to make the background white
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            #overall layout of main page
            spacing: 20
            pos_hint: {'y': 0.5}
            orientation: 'vertical'

            #adds the top bar
            Label:
                text: "[b]Main CS321 Project:[/b] \nFruit Ripeness Classifier and Guide"
                markup: True
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
				font_size: 20
                size_hint_y: None
                height: 55
                halign:"center"

            #spacing for the elements on the page
            Widget:
            Button:
				on_release: app.root.current = 'classifier'
                background_normal: './program/miscImages/buttonGreen.PNG'
                background_down: './program/miscImages/buttonBlue.PNG'
				text: '[b]Classify an image[/b]'
                color: utils.get_color_from_hex('#2d862d')
                markup: True
				font_size: 30
                pos_hint: {'center_x': .5}
                size: (400, 100)
                size_hint: (None, None)


            #spacing for the elements on the page
            Widget:
			Button:
				on_release: app.root.current = 'guide'
                background_normal: './program/miscImages/buttonRed.PNG'
                background_down: './program/miscImages/buttonOrange.PNG'
				text: '[b]Infographic[/b]'
                color: utils.get_color_from_hex('#ff0000')
                markup: True
				font_size: 30
                pos_hint: {'center_x': .5}
                size: (400, 100)
                size_hint: (None, None)

            #spacing for the elements on the page
            Widget:

            #adds the bottom bar
            Label:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 55




<Guide>:
    name: 'guide'

	GridLayout:
        cols:1
        size: root.width, root.height

        #to make the background white
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            #overall layout of main page
            id: innerBoxLayout
            spacing: 20
            pos_hint: {'y': 0.5}
            orientation: 'vertical'

            #adds the top bar
            Label:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 55
                Button:
                    background_color: 0, 0, 0, 0
                    on_release: root.manager.current = 'main'
                    y: self.parent.y + self.parent.height - 50
                    x: self.parent.x
                    size: 70, 50
                    Image:
                        source: './program/miscImages/arrow.png'
                        y: self.parent.y + self.parent.height - 50
                        x: self.parent.x
                        size: 80, 50

            #spacing for the elements on the page
            Widget:



        # BoxLayout:
        #     orientation: 'vertical'
            Label:
                text: 'This helpful guide will assist in identifying the ripenss of fruit.'
                color:(0,0,0,0.8)

            Label:
                text: 'Tomatoes'
                font_size: 20
                color:(0,0,0,0.8)
            #A fruit comparasion with nested box layouts (Tomatoes)
            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'

                    Image:
                        source: 'tomatoes_test.jpg'
                        size: (400, 150)
                        #size_hint: (100, 100)
                        pos_hint: {'center_x': .5}
                    Widget:
                    #space
                    Label:
                        text: 'Not Ripe'
                        color:(0,0,0,0.8)

                BoxLayout:
                    orientation: 'vertical'

                    Image:
                        source: 'tomatoes_test.jpg'
                        size: (400, 150)
                        size_hint: (.5, .5)
                        pos_hint: {'center_x': .5}
                    Label:
                        text: 'Ripe'
                        color:(0,0,0,0.8)
            Label:
                valign: 'center'
                text: 'When not yet ripe, tomatoes are a bright green color.\nOver time, they turn bright red.\nAn ripe tomato will be slightly soft to the touch.'
                color:(0,0,0,0.8)


            Label:
                text: 'Bananas'
                color:(0,0,0,0.8)
                font_size: 20

            #A fruit comparasion with nested box layouts (Banana)
            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'

                    Image:
                        source: 'bananas_test.jpg'
                        size: (400, 150)
                        #size_hint: (None, None)
                        #pos_hint: {'center_x': .5}
                    Label:
                        text: 'Not Ripe'
                        color:(0,0,0,0.8)

                BoxLayout:
                    orientation: 'vertical'

                    Image:
                        source: 'bananas_test.jpg'
                        size: (400, 150)
                        #size_hint: (None, None)
                        #pos_hint: {'center_x': .5}
                    Label:
                        text: 'Ripe'
                        color:(0,0,0,0.8)
            Label:
                valign: 'center'
                text: 'When not yet ripe, banana are a dull green color.\nA ripe banana is a bright yellow color.\nAn overripe banana grows brown colored spots until it is completely brown.'
                color:(0,0,0,0.8)

            Label:
                text: 'Avocados'
                color:(0,0,0,0.8)
                font_size: 20
            #A fruit comparasion with nested box layouts (Avocados)
            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'

                    Image:
                        source: 'avocados_test.jpg'
                        size: (400, 150)
                        #size_hint: (None, None)
                        #pos_hint: {'center_x': .5}
                    Label:
                        text: 'Not Ripe'
                        color:(0,0,0,0.8)

                BoxLayout:
                    orientation: 'vertical'

                    Image:
                        source: 'avocados_test.jpg'
                        size: (400, 150)
                        #size_hint: (None, None)
                        #pos_hint: {'center_x': .5}
                    Label:
                        text: 'Ripe'
                        color:(0,0,0,0.8)
            Label:
                valign: 'center'
                text: 'When not yet ripe, avocados are green.\nOver time, they darken in color.\nAn ripe avocado will be a dark green color and be slightly soft to the touch.'
                color:(0,0,0,0.8)





            #Label:
            #    text: 'These are not bananas'
            #    sized_hint_x: None
            #    size: self.texture_size
            #    pos_hint: {'right': 1}
            #    color:(0,0,0,0.8)
            #Label:
            #    text: 'These are bananas.'
            #Image:
            #    source: 'bananas_test.jpg'
            #    size: (400, 150)
            #    size_hint: (None, None)
            #    pos_hint: {'center_x': .5}


            #spacing for the elements on the page
            Widget:

            #this adds the bottom bar
            Label:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 55




