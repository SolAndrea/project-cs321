#:import utils kivy.utils

ScreenManagement:
    MainScreen:
        id: "main"
    Guide:
        id: "guide"
	BananasCla:
        id: 'bananas'
	TomatoesCla:
        id: 'tomatoes'
	AvocadosCla:
    	id: 'avocados'
	StrawberrysCla:
		id: "strawberry"
	Classifier:
        id: "classifier"

<MainScreen>:
    name: 'main'
	GridLayout:
        cols:1
        size: root.width, root.height

        #to make the background white
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            #overall layout of main page
            spacing: 20
            pos_hint: {'y': 0.5}
            orientation: 'vertical'

            #adds the top bar
            Label:
                text: "[b]Main CS321 Project:[/b] \nFruit Ripeness Classifier and Guide"
                markup: True
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                font_name: './program/uiElements/coolvetica.ttf'
				font_size: 20
                size_hint_y: None
                height: 55
                halign:"center"

            #spacing for the elements on the page
            Widget:
            Button:
				on_release: app.root.current = 'classifier'
                background_normal: './program/uiElements/genericButton.PNG'
                background_down: './program/uiELements/genericButton_pressed.PNG'
				text: '[b]Classify an image[/b]'
                color: utils.get_color_from_hex('#2d862d')
                markup: True
                font_name: './program/uiElements/coolvetica.ttf'
				font_size: 30
                pos_hint: {'center_x': .5}
                size: (400, 100)
                size_hint: (None, None)


            #spacing for the elements on the page
            Widget:
			Button:
				on_release: app.root.current = 'guide'
                background_normal: './program/uiElements/genericButton.PNG'
                background_down: './program/uiELements/genericButton_pressed.PNG'
				text: '[b]Infographic[/b]'
                color: utils.get_color_from_hex('#ff0000')
                markup: True
                font_name: './program/uiElements/coolvetica.ttf'
				font_size: 30
                pos_hint: {'center_x': .5}
                size: (400, 100)
                size_hint: (None, None)

            #spacing for the elements on the page
            Widget:

            #adds the bottom bar
            Label:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 55




<Guide>:
    name: 'guide'

	GridLayout:
        cols:1
        size: root.width, root.height

        #to make the background white
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            #overall layout of main page
            id: innerBoxLayout
            pos_hint: {'y': 0.5}
            orientation: 'vertical'

            #adds the top bar
            Label:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#c70039')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: 55
                Button:
                    background_color: 0, 0, 0, 0
                    on_release: root.manager.current = 'main'
                    y: self.parent.y + self.parent.height - 50
                    x: self.parent.x
                    size: 70, 50
                    Image:
                        source: './program/miscImages/arrow.png'
                        y: self.parent.y + self.parent.height - 50
                        x: self.parent.x
                        size: 80, 50


            ScrollView:
                size: self.size
                do_scroll_y: True
                do_scroll_x: False
                bar_width: 6



                GridLayout:
                    size_hint_y: None
                    cols: 1
                    row_default_height: '60dp'
                    row_force_default: True
                    height: self.minimum_height

                    # Widget:



                    Label:
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'This helpful guide will assist in identifying the ripenss of fruit.'
                        color:(0,0,0,0.8)

                    Widget:

                    Label:
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'Tomatoes'
                        font_size: 20
                        color:(0,0,0,0.8)

                    #A fruit comparasion with nested box layouts (Tomatoes)
                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            orientation: 'vertical'
                            pos_hint: {'y': 0.3}

                            Image:
                                source: 'tomatoes_nonRipe_test.jpg'
                                keep_ratio: True
                                size: (150, 150)
                                size_hint: (None, None)
                                pos_hint: {'center_x': .5}

                            Widget:

                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: 'Not Ripe'
                                color:(0,0,0,0.8)

                        BoxLayout:
                            orientation: 'vertical'
                            pos_hint: {'y': 0.3}

                            Image:
                                source: 'tomatoes_test.jpg'
                                keep_ratio: True
                                size: (150, 150)
                                size_hint: (None, None)
                                pos_hint: {'center_x': .5}
                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: 'Ripe'
                                color:(0,0,0,0.8)
                    Label:
                        valign: 'center'
                        halign: 'center'
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'When not yet ripe, tomatoes are a bright green color.\nOver time, they turn bright red.\nAn ripe tomato will be slightly soft to the touch.'
                        color:(0,0,0,0.8)



                    Widget:
                        canvas:
                            Color:
                                rgba: utils.get_color_from_hex('#e6e6e6')
                            Line:
                                width:2
                                points: [200, self.y, 600, self.y]


                    Widget:
                        height: 4
                        spacing: 1, 1
                        padding: 1, 1


                    Label:
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'Bananas'
                        color:(0,0,0,0.8)
                        font_size: 20

                    #A fruit comparasion with nested box layouts (Banana)
                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            orientation: 'vertical'
                            pos_hint: {'y': 0.3}

                            Image:
                                source: 'bananas_nonRipe_test.jpg'
                                keep_ratio: True
                                size: (150, 150)
                                size_hint: (None, None)
                                pos_hint: {'center_x': .5}
                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: 'Not Ripe'
                                color:(0,0,0,0.8)

                        BoxLayout:
                            orientation: 'vertical'

                            Image:
                                source: 'bananas_test.jpg'
                                keep_ratio: True
                                size: (150, 150)
                                pos_hint: {'center_x': .5}
                                size_hint: (None, None)
                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: 'Ripe'
                                color:(0,0,0,0.8)
                    Label:
                        valign: 'center'
                        halign: 'center'
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'When not yet ripe, banana are a dull green color.\nA ripe banana is a bright yellow color.\nAn overripe banana grows brown colored spots until it is completely brown.'
                        color:(0,0,0,0.8)


                    Widget:
                        canvas:
                            Color:
                                rgba: utils.get_color_from_hex('#e6e6e6')
                            Line:
                                width:2
                                points: [200, self.y, 600, self.y]


                    Widget:
                        height: 1
                        spacing: 0, 0
                        padding: 0, 0
                        size_hint: (None, None)


                    Label:
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'Avocados'
                        color:(0,0,0,0.8)
                        font_size: 20
                    #A fruit comparasion with nested box layouts (Avocados)
                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            orientation: 'vertical'

                            Image:
                                source: 'avocados_nonRipe_test.jpg'
                                keep_ratio: True
                                size: (100, 100)
                                size_hint: (None, None)
                                pos_hint: {'center_x': .5}
                            Widget:
                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: '\n\nNot Ripe'
                                markup: True
                                color:(0,0,0,0.8)
                                pos_hint: {'y': 2}

                        BoxLayout:
                            orientation: 'vertical'

                            Image:
                                source: 'avocados_ripe_test.jpg'
                                keep_ratio: True
                                size: (100, 100)
                                pos_hint: {'center_x': .5}
                                size_hint: (None, None)
                            Widget:
                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: '\n\nRipe'
                                markup: True
                                color:(0,0,0,0.8)

                    Widget:
                        height: 2
                        size_hint_y: None
                        spacing: 0, 0
                        padding: 0, 0

                    Label:
                        valign: 'center'
                        halign: 'center'
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'When not yet ripe, avocados are green.\nOver time, they darken in color.\nAn ripe avocado will be a dark green color and be slightly soft to the touch.'
                        color:(0,0,0,0.8)


                    Widget:
                        canvas:
                            Color:
                                rgba: utils.get_color_from_hex('#e6e6e6')
                            Line:
                                width:2
                                points: [200, self.y, 600, self.y]


                    Widget:
                        height: 4
                        spacing: 1, 1
                        padding: 1, 1

                    Label:
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'Strawberries'
                        font_size: 20
                        color:(0,0,0,0.8)

                    #A fruit comparasion with nested box layouts (Tomatoes)
                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            orientation: 'vertical'
                            pos_hint: {'y': 0.3}

                            Image:
                                source: 'strawberry_nonRipe_test.jpg'
                                keep_ratio: True
                                size: (150, 150)
                                size_hint: (None, None)
                                pos_hint: {'center_x': .5}

                            Widget:

                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: 'Not Ripe'
                                color:(0,0,0,0.8)

                        BoxLayout:
                            orientation: 'vertical'
                            pos_hint: {'y': 0.3}

                            Image:
                                source: 'strawberry_test.jpg'
                                keep_ratio: True
                                size: (150, 150)
                                size_hint: (None, None)
                                pos_hint: {'center_x': .5}
                            Label:
                                font_name: './program/uiElements/coolvetica.ttf'
                                text: 'Ripe'
                                color:(0,0,0,0.8)
                    Label:
                        valign: 'center'
                        halign: 'center'
                        font_name: './program/uiElements/coolvetica.ttf'
                        text: 'When not yet ripe, strawberries are a bright green color.\nOver time, they turn bright red.\nA ripe strawberry will be slightly firm to the touch.'
                        color:(0,0,0,0.8)




                    Widget:
                        height: 2
                        size_hint_y: None
                        spacing: 0, 0
                        padding: 0, 0


        #this adds the bottom bar
        Label:
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#c70039')
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 55




