ScreenManagement:
    MainScreen:
    Guide:
	BananasCla:
	TomatoesCla:
	Classifier:
	
<MainScreen>:
    name: 'main'
	GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            rows:3

            Label:
                text: "Main CS321 Project: \nFuit Ripeness Classifier and Guide"
				font_size: 40
				
            Button:
				on_release: app.root.current = 'classifier'
				text: 'Classify an image'
				font_size: 30
			
			Button:
				on_release: app.root.current = 'guide'
				text: 'Go to guide'
				font_size: 30


            
<Guide>:
    name: 'guide'

    Button:
        on_release: app.root.current = 'main'
        text: 'back to the home screen'
        font_size: 50
		
<Classifier>:
	name: 'classifier'
	GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            rows:3
			
			Button:
				on_release: app.root.current = 'bananas'
				text: 'classify a banana image'
				font_size: 30
			Button:
				on_release: app.root.current = 'tomatoes'
				text: 'classify a tomato image'
				font_size: 30
			Button:
				on_release: app.root.current = 'main'
				text: 'back to the home screen'
				font_size: 30
				
<BananasCla>:
	name: 'bananas'
	Button:
        on_release: app.root.current = 'main'
        text: 'back to the home screen'
        font_size: 50
		
<TomatoesCla>:
	name: 'tomatoes'
	Button:
        on_release: app.root.current = 'main'
        text: 'back to the home screen'
        font_size: 50
